      %h5 Kento Terao
      .chat-sidetop__icons
        %a.chat-sidetop__icon
          =link_to "" do
            =fa_icon "pencil-square-o", class: "chat-sidetop__icon"
          =link_to "/users/#{current_user.id}/edit", method: :get do
            =fa_icon "gear", class: "chat-sidetop__icon"


    %ul.chat-lists
