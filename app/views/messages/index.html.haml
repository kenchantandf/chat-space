.chat
  = render partial: 'layouts/sidebar', locals: { groups: @groups }

  .chat-main
    .chat-top
      .chat-top--left
        %h2
        = @group.name
        %p.chat-top__users
          Members:
          = render @group.users
      = link_to 'Edit', edit_group_path(@group), class: 'chat-top__edit-btn'

    .chat-context
      %ul.chat-messages
      = render @messages

    .chat-footer
      %form.new_message{ action: "", method: 'post'}
        .chat-footer__body
          %textarea#message_body{ name: 'message[body]', placeholder: '   type a message'}
          %label.chat-footer__body__file
            %input#message_image{ name: 'message[image]', type: 'file'}
            %i.fa.fa-image
        %input.submit_btn{type: 'submit', value: 'Send'}
