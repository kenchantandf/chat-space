.chat-sidebar
  .chat-sidetop
    %h5
      = current_user.name
    .chat-sidetop__icons
      %a.chat-sidetop__icon
        =link_to new_group_path do
          =fa_icon 'pencil-square-o', class: 'chat-sidetop__icon'
        =link_to edit_user_path(current_user), method: :get do
          =fa_icon 'gear', class: 'chat-sidetop__icon'

  %ul.chat-groups
    = render groups
